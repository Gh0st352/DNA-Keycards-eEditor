<syncfusion:ChromelessWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Name="MainExe"
    x:Class="MainWindow"
    syncfusion:SfSkinManager.Theme="{syncfusion:SkinManager ThemeName=Windows11Dark}"
    Title="  DNA Keycard Economy Manager" Height="600" Width="750" Icon="App.ico"
    Background="#FF3F3F46" UseLayoutRounding="True" SnapsToDevicePixels="True" ResizeMode="CanMinimize"
    CornerRadius="15" IconAlignment="Right" ShowMaximizeButton="False" TitleFontSize="20" TitleBarHeight="40"
    AllowsTransparency="True" WindowStyle="None" MinWidth="750" MinHeight="600" MaxWidth="750" MaxHeight="600">
    <Grid>
        <syncfusion:TabControlExt x:Name="MainTabs" Margin="0,0,0,35" TabItemSize="Normal" CloseButtonType="Hide"
                                  ShowTabItemContextMenu="False" ShowTabListContextMenu="False" EnableLabelEdit="False"
                                  TabStripPlacement="Top">
            <syncfusion:TabItemExt x:Name="Tab_Main" Header="Main Menu" MinWidth="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="337*" />
                        <ColumnDefinition Width="407*" />
                    </Grid.ColumnDefinitions>
                    <syncfusion:ButtonAdv x:Name="B_ImportTypes" Content="ButtonAdv" HorizontalAlignment="Left"
                                          Height="29" Label="Import Types" VerticalAlignment="Top" Width="213"
                                          Margin="10,10,0,0" />
                    <syncfusion:SfTreeGrid x:Name="G_ImportedTypes" Margin="10,49,114,10" ColumnSizer="Auto">
                        <syncfusion:SfTreeGrid.Columns>
                            <syncfusion:TreeGridTextColumn HeaderText="Imported List Types" MappingName="Name"
                                                           IsReadOnly="True" ColumnSizer="FillColumn" />
                            <syncfusion:TreeGridTextColumn IsHidden="True" MappingName="Path" />
                            <syncfusion:TreeGridTextColumn IsHidden="True" MappingName="Kind" />
                        </syncfusion:SfTreeGrid.Columns>
                    </syncfusion:SfTreeGrid>
                </Grid>
            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt x:Name="Tab_Types" Header="Types" MinWidth="20" MinHeight="20">
                <Grid>
                    <syncfusion:SfTreeGrid x:Name="G_Types" ColumnSizer="SizeToHeader" >
                        <syncfusion:SfTreeGrid.Columns>
                            <syncfusion:TreeGridTextColumn HeaderText="Type Name" MappingName="typename" IsReadOnly="True"/>
                        </syncfusion:SfTreeGrid.Columns>
                    </syncfusion:SfTreeGrid>
                </Grid>
            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt x:Name="Tab_Weapons" Header="Weapon Kits" MinWidth="20" MinHeight="20">
                <Grid>
                    <Grid x:Name="G_Weapon_Red" HorizontalAlignment="Left" Height="516" VerticalAlignment="Top" Width="193" Margin="10,10,0,0" Background="#33830E0E">
                        <Label Content="Red Weapon Kit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="193" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF020000" BorderThickness="0,0,0,2" FontSize="16"/>
                        <syncfusion:CheckListBox HorizontalAlignment="Left" Height="161" VerticalAlignment="Top" Width="193" Margin="0,58,0,0" BorderThickness="0,1">
                            <syncfusion:CheckListBoxItem Content="Count in Cargo" Margin="0"/>
                            <syncfusion:CheckListBoxItem Content="Count in Hoarder" Margin="0"/>
                            <syncfusion:CheckListBoxItem Content="Count in Map" Margin="0"/>
                            <syncfusion:CheckListBoxItem Content="Count in Player" Margin="0"/>
                            <syncfusion:CheckListBoxItem Content="Crafted" Margin="0"/>
                            <syncfusion:CheckListBoxItem Content="Dynamic Event Loot" Margin="0"/>
                        </syncfusion:CheckListBox>
                        <Label Content="Flags" HorizontalAlignment="Left" VerticalAlignment="Top" Width="193" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF020000" Margin="0,33,0,0"/>
                        <syncfusion:SfTreeGrid x:Name="G_Wep_Red_Cats" Margin="0,219,0,159" ColumnSizer="AutoFillColumn" BorderThickness="0,1">
                            <syncfusion:SfTreeGrid.Columns>
                                <syncfusion:TreeGridCheckBoxColumn MappingName="Checked" AllowSorting="False" TextAlignment="Right" HeaderText="    "/>
                                <syncfusion:TreeGridTextColumn HeaderText="Category" MappingName="Name"
                                    IsReadOnly="True" ColumnSizer="SizeToCells" />
                            </syncfusion:SfTreeGrid.Columns>
                        </syncfusion:SfTreeGrid>
                    </Grid>
                </Grid>
            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
    </Grid>
</syncfusion:ChromelessWindow>