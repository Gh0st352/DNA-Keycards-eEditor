<syncfusion:ChromelessWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Name="MainExe"
    x:Class="MainWindow"
    syncfusion:SfSkinManager.Theme="{syncfusion:SkinManager ThemeName=Windows11Dark}"
    Title="  DNA_Keycard Economy Editor" Height="725" Width="1155" Icon="App.ico"
    Background="#FF3F3F46" UseLayoutRounding="True" SnapsToDevicePixels="True" ResizeMode="CanMinimize"
    CornerRadius="15" IconAlignment="Right" ShowMaximizeButton="False" TitleFontSize="20" TitleBarHeight="40"
    AllowsTransparency="True" WindowStyle="None" MinWidth="1155" MinHeight="725" MaxWidth="750" MaxHeight="600">
    <Grid>
        <Grid Height="649" VerticalAlignment="Top">
            <syncfusion:TabControlExt x:Name="MainTabs" TabItemSize="Normal" CloseButtonType="Hide"
                                  ShowTabItemContextMenu="False" ShowTabListContextMenu="False" EnableLabelEdit="False"
                                  TabStripPlacement="Top">
                <syncfusion:TabItemExt x:Name="Tab_Main" Header="Main Menu" MinWidth="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="337*" />
                            <ColumnDefinition Width="407*" />
                        </Grid.ColumnDefinitions>
                        <syncfusion:ButtonAdv x:Name="B_ImportTypes" Content="ButtonAdv" HorizontalAlignment="Left"
                                          Height="29" Label="Import Types" VerticalAlignment="Top" Width="213"
                                          Margin="10,10,0,0" />
                        <syncfusion:SfTreeGrid x:Name="G_ImportedTypes" Margin="10,49,114,10" ColumnSizer="Auto">
                            <syncfusion:SfTreeGrid.Columns>
                                <syncfusion:TreeGridTextColumn HeaderText="Imported List Types" MappingName="Name"
                                                           IsReadOnly="True" ColumnSizer="FillColumn" />
                                <syncfusion:TreeGridTextColumn IsHidden="True" MappingName="Path" />
                                <syncfusion:TreeGridTextColumn IsHidden="True" MappingName="Kind" />
                            </syncfusion:SfTreeGrid.Columns>
                        </syncfusion:SfTreeGrid>
                    </Grid>
                </syncfusion:TabItemExt>
                <syncfusion:TabItemExt x:Name="Tab_Types" Header="Types" MinWidth="20" MinHeight="20">
                    <Grid>
                        <syncfusion:SfTreeGrid x:Name="G_Types" ColumnSizer="SizeToHeader" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0,0,0,10">
                            <syncfusion:SfTreeGrid.Columns>
                                <syncfusion:TreeGridTextColumn HeaderText="Type Name" MappingName="typename"
                                                           IsReadOnly="True" />
                            </syncfusion:SfTreeGrid.Columns>
                        </syncfusion:SfTreeGrid>
                    </Grid>
                </syncfusion:TabItemExt>
                <syncfusion:TabItemExt x:Name="Tab_Kits" Header="Kits" MinWidth="20" MinHeight="20">
                    <Grid>
                        <Grid x:Name="G_KitType" Background="#33535353">
                            <Grid x:Name="G_Flags" HorizontalAlignment="Left" Height="227" VerticalAlignment="Top"
                              Width="209" Margin="10,38,0,0">
                                <Label Content="Flags" HorizontalAlignment="Left" VerticalAlignment="Top" Width="209"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   BorderBrush="#FF020000" />
                                <syncfusion:CheckListBox x:Name="CHK_Weapon_Red_Flags" HorizontalAlignment="Left"
                                                     Height="196" VerticalAlignment="Top" Width="209" Margin="0,31,0,0"
                                                     BorderThickness="2">
                                    <syncfusion:CheckListBoxItem Content="Count in Cargo" Margin="0" />
                                    <syncfusion:CheckListBoxItem Content="Count in Hoarder" Margin="0" />
                                    <syncfusion:CheckListBoxItem Content="Count in Map" Margin="0" />
                                    <syncfusion:CheckListBoxItem Content="Count in Player" Margin="0" />
                                    <syncfusion:CheckListBoxItem Content="Crafted" Margin="0" />
                                    <syncfusion:CheckListBoxItem Content="Dynamic Event Loot" Margin="0" />
                                </syncfusion:CheckListBox>
                            </Grid>
                            <Grid x:Name="G_Categories" HorizontalAlignment="Left" Height="227" VerticalAlignment="Top"
                              Width="209" Margin="240,38,0,0">
                                <Label Content="Detected Categories" HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Width="209" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   BorderBrush="#FF020000" />
                                <syncfusion:CheckListBox x:Name="CHK_Weapon_Red_Cat" HorizontalAlignment="Left"
                                                     Height="196" VerticalAlignment="Top" Width="209" Margin="0,31,0,0"
                                                     BorderThickness="2" DisplayMemberPath="Name" />
                            </Grid>
                            <Grid x:Name="G_Values" HorizontalAlignment="Left" Height="227" VerticalAlignment="Top"
                              Width="209" Margin="468,38,0,0">
                                <Label Content="Detected Values" HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Width="209" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   BorderBrush="#FF020000" />
                                <syncfusion:CheckListBox x:Name="CHK_Weapon_Red_Val" HorizontalAlignment="Left"
                                                     Height="196" VerticalAlignment="Top" Width="209" Margin="0,31,0,0"
                                                     BorderThickness="2" DisplayMemberPath="Name" />
                            </Grid>
                            <Grid x:Name="G_Usages" HorizontalAlignment="Left" Height="459" VerticalAlignment="Top"
                              Width="209" Margin="696,38,0,0">
                                <Label Content="Detected Usages" HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Width="209" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   BorderBrush="#FF020000" />
                                <syncfusion:CheckListBox x:Name="CHK_Weapon_Red_Use" HorizontalAlignment="Left"
                                                     Height="418" VerticalAlignment="Top" Width="209" Margin="0,31,0,0"
                                                     BorderThickness="2" DisplayMemberPath="Name" />
                            </Grid>
                            <Grid x:Name="G_Tags" HorizontalAlignment="Left" Height="459" VerticalAlignment="Top"
                              Width="209" Margin="925,38,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="91*"/>
                                    <RowDefinition Height="136*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Detected Tags" HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Width="209" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   BorderBrush="#FF020000" />
                                <syncfusion:CheckListBox x:Name="CHK_Weapon_Red_Tag" HorizontalAlignment="Left"
                                                     Height="418" VerticalAlignment="Top" Width="209" Margin="0,31,0,0"
                                                     BorderThickness="2" DisplayMemberPath="Name" Grid.RowSpan="2" />
                            </Grid>
                            <syncfusion:ComboBoxAdv x:Name="Kit_ColorChoice" HorizontalAlignment="Left" Height="33"
                                                Margin="10,5,0,0" VerticalAlignment="Top" Width="1124"
                                                DefaultText="Select Kit Type"
                                                HorizontalContentAlignment="Center" FontSize="16">
                                <ListBoxItem Content="Red Kit" />
                                <ListBoxItem Content="Purple Kit" />
                                <ListBoxItem Content="Blue Kit" />
                                <ListBoxItem Content="Green Kit" />
                                <ListBoxItem Content="Yellow Kit" />
                            </syncfusion:ComboBoxAdv>
                            <Grid x:Name="G_Sidearms" HorizontalAlignment="Left" Height="340" VerticalAlignment="Top"
                              Width="333" Margin="10,270,0,0">
                                <Label Content="Side Arms Types (1 per line, will be set to &quot;side&quot;)" HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Width="313" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   BorderBrush="#FF020000" Margin="10,0,0,0" />
                                <syncfusion:SfTextBoxExt x:Name="Kits_SideArms"
                                                     Height="259" Margin="0,31,0,0" TextWrapping="Wrap"
                                                     VerticalAlignment="Top" />
                                <syncfusion:ButtonAdv x:Name="Kits_ImportSidearm" Content="ButtonAdv"
                                                  HorizontalAlignment="Left" Height="35"
                                                  Label="Import Sidearms From Expansion Market" VerticalAlignment="Top"
                                                  Width="200" Margin="0,295,0,0" Click="ButtonAdv_Click" Background="#261A88E4" />
                                <syncfusion:ButtonAdv x:Name="Kits_ClearSidearms" Content="ButtonAdv"
                                                  HorizontalAlignment="Left" Height="35" Label="Clear Sidearms"
                                                  VerticalAlignment="Top" Width="128" Margin="205,295,0,0" Background="#4CD13333" />
                            </Grid>
                            <syncfusion:ButtonAdv x:Name="WeaponKits_Generate" Content="ButtonAdv" Label="Generate Weapon Kit"
                                              Background="#632CC33A" FontSize="16" Margin="696,502,10,72" />
                        </Grid>
                        <Grid x:Name="G_Sidearms_Copy" HorizontalAlignment="Left" Height="340" VerticalAlignment="Top"
                            Width="333" Margin="354,270,0,0">
                            <Label Content="Restricted Types (1 per line ,will be skipped)" HorizontalAlignment="Left" VerticalAlignment="Top"
                                Width="333" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                BorderBrush="#FF020000" />
                            <syncfusion:SfTextBoxExt x:Name="Kits_Restricted"
                                Height="259" Margin="0,31,0,0" TextWrapping="Wrap"
                                VerticalAlignment="Top" />
                            <syncfusion:ButtonAdv x:Name="Kits_ImportRestricted" Content="ButtonAdv"
                                HorizontalAlignment="Left" Height="35"
                                Label="Import types from Expansion Market file" VerticalAlignment="Top"
                                Width="176" Margin="0,295,0,0" Background="#261A88E4" />
                            <syncfusion:ButtonAdv x:Name="Kits_ClearRestricted" Content="ButtonAdv"
                                HorizontalAlignment="Left" Height="35" Label="Clear Restricted"
                                VerticalAlignment="Top" Width="152" Margin="181,295,0,0" Background="#4CD13333" />
                        </Grid>
                    </Grid>
                </syncfusion:TabItemExt>
                <syncfusion:TabItemExt x:Name="Tab_KitsGenerated" Header="Generated Kits" MinWidth="20"
                                   MinHeight="20">
                    <Grid>
                        <Grid x:Name="G_Kit_GenRed" Width="229"
                          Background="#4C830E0E" Height="582" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Red Kits" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228"
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"
                               Margin="1,0,0,0" />
                            <Grid HorizontalAlignment="Left" Height="551" VerticalAlignment="Top" Width="230" Margin="0,31,0,0">
                                <syncfusion:SfTreeView x:Name="TV_WeaponKits_Generated_Red" AllowDrop="False"
                                               ItemTemplateDataContextType="Item" ShowLines="True"
                                               ShowRootLines="True" SelectionMode="SingleDeselect" AllowDeleting="True"
                                               AllowEditing="True" EditTrigger="DoubleTap" IsAnimationEnabled="True"
                                               IsManipulationEnabled="True" FocusBorderThickness="0,1">
                                    <syncfusion:SfTreeView.Nodes>
                                        <syncfusion:TreeViewNode Content="Please Generate a Kit" HasChildNodes="False"
                                                         IsExpanded="False" IsChecked="False"
                                                         ShowExpanderAnimation="False" />
                                    </syncfusion:SfTreeView.Nodes>
                                </syncfusion:SfTreeView>
                            </Grid>
                        </Grid>
                        <syncfusion:ButtonAdv x:Name="WeaponKits_Generated_Export" Content="ButtonAdv"
                                              Label="Export : KeyCard Weapons Config Json" Margin="0,587,691,0" FontSize="18" Background="#4C26D315" />
                        <Grid x:Name="G_Weapon_GenPurp" Width="229"
                            Background="#33EE33E5" Height="582" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="229,0,0,0">
                            <Label Content="Purple Kits" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"
                                Margin="1,0,0,0" />
                            <Grid HorizontalAlignment="Left" Height="551" VerticalAlignment="Top" Width="230" Margin="0,31,0,0">
                                <syncfusion:SfTreeView x:Name="TV_WeaponKits_Generated_Purple" AllowDrop="False"
                                    ItemTemplateDataContextType="Item" ShowLines="True"
                                    ShowRootLines="True" SelectionMode="SingleDeselect" AllowDeleting="True"
                                    AllowEditing="True" EditTrigger="DoubleTap" IsAnimationEnabled="True"
                                    IsManipulationEnabled="True" FocusBorderThickness="0,1">
                                    <syncfusion:SfTreeView.Nodes>
                                        <syncfusion:TreeViewNode Content="Please Generate a Kit" HasChildNodes="False"
                                            IsExpanded="False" IsChecked="False"
                                            ShowExpanderAnimation="False" />
                                    </syncfusion:SfTreeView.Nodes>
                                </syncfusion:SfTreeView>
                            </Grid>
                        </Grid>
                        <Grid x:Name="G_Weapon_GenBlue" Width="229"
                            Background="#333043E1" Height="582" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="458,0,0,0">
                            <Label Content="Blue Kits" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"
                                Margin="1,0,0,0" />
                            <Grid HorizontalAlignment="Left" Height="551" VerticalAlignment="Top" Width="230" Margin="0,31,0,0">
                                <syncfusion:SfTreeView x:Name="TV_WeaponKits_Generated_Blue" AllowDrop="False"
                                    ItemTemplateDataContextType="Item" ShowLines="True"
                                    ShowRootLines="True" SelectionMode="SingleDeselect" AllowDeleting="True"
                                    AllowEditing="True" EditTrigger="DoubleTap" IsAnimationEnabled="True"
                                    IsManipulationEnabled="True" FocusBorderThickness="0,1">
                                    <syncfusion:SfTreeView.Nodes>
                                        <syncfusion:TreeViewNode Content="Please Generate a Kit" HasChildNodes="False"
                                            IsExpanded="False" IsChecked="False"
                                            ShowExpanderAnimation="False" />
                                    </syncfusion:SfTreeView.Nodes>
                                </syncfusion:SfTreeView>
                            </Grid>
                        </Grid>
                        <Grid x:Name="G_Weapon_GenGreen" Width="229"
                            Background="#3350FF47" Height="582" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="687,0,-22,0">
                            <Label Content="Green Kits" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"
                                Margin="1,0,0,0" />
                            <Grid HorizontalAlignment="Left" Height="551" VerticalAlignment="Top" Width="230" Margin="0,31,0,0">
                                <syncfusion:SfTreeView x:Name="TV_WeaponKits_Generated_Green" AllowDrop="False"
                                    ItemTemplateDataContextType="Item" ShowLines="True"
                                    ShowRootLines="True" SelectionMode="SingleDeselect" AllowDeleting="True"
                                    AllowEditing="True" EditTrigger="DoubleTap" IsAnimationEnabled="True"
                                    IsManipulationEnabled="True" FocusBorderThickness="0,1">
                                    <syncfusion:SfTreeView.Nodes>
                                        <syncfusion:TreeViewNode Content="Please Generate a Kit" HasChildNodes="False"
                                            IsExpanded="False" IsChecked="False"
                                            ShowExpanderAnimation="False" />
                                    </syncfusion:SfTreeView.Nodes>
                                </syncfusion:SfTreeView>
                            </Grid>
                        </Grid>
                        <Grid x:Name="G_Weapon_GenYellow" Width="229"
                            Background="#4CFFF300" Height="582" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="916,0,-251,0">
                            <Label Content="Yellow Kits" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"
                                Margin="1,0,0,0" />
                            <Grid HorizontalAlignment="Left" Height="551" VerticalAlignment="Top" Width="230" Margin="0,31,0,0">
                                <syncfusion:SfTreeView x:Name="TV_WeaponKits_Generated_Yellow" AllowDrop="False"
                                    ItemTemplateDataContextType="Item" ShowLines="True"
                                    ShowRootLines="True" SelectionMode="SingleDeselect" AllowDeleting="True"
                                    AllowEditing="True" EditTrigger="DoubleTap" IsAnimationEnabled="True"
                                    IsManipulationEnabled="True" FocusBorderThickness="0,1">
                                    <syncfusion:SfTreeView.Nodes>
                                        <syncfusion:TreeViewNode Content="Please Generate a Kit" HasChildNodes="False"
                                            IsExpanded="False" IsChecked="False"
                                            ShowExpanderAnimation="False" />
                                    </syncfusion:SfTreeView.Nodes>
                                </syncfusion:SfTreeView>
                            </Grid>
                        </Grid>
                    </Grid>
                </syncfusion:TabItemExt>
            </syncfusion:TabControlExt>
        </Grid>
        <Label x:Name="FooterText"
               Content="Author:    Gh0st                  |                  Discord:    Gh0st#5623                  |                  Github:    https://github.com/Gh0st352                  |                  GNU General Public License v3.0" VerticalAlignment="Bottom" Height="32"
               BorderThickness="0" ClipToBounds="True" FontStyle="Italic" FontWeight="SemiBold"
               Foreground="White" HorizontalContentAlignment="Center" />
    </Grid>
</syncfusion:ChromelessWindow>